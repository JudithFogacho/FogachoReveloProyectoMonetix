{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning" // Logs de consultas SQL
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "FogachoReveloDataBase": "Server=(localdb)\\mssqllocaldb;Database=FogachoRevelo.Data;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=True;TrustServerCertificate=True"
  },
  "DataProtection": {
    "KeyStoragePath": "DataProtection-Keys", // Ruta para almacenar claves de encriptación
    "ApplicationName": "Monetix" // Nombre único para la aplicación
  },
  "CookieSettings": {
    "ExpireTimeInMinutes": 30, // Tiempo de expiración de las cookies
    "Secure": true, // Solo enviar cookies sobre HTTPS
    "SameSite": "Strict", // Protección contra CSRF
    "HttpOnly": true // Prevenir acceso desde JavaScript
  },
  "HttpsRedirection": {
    "Enabled": true, // Habilitar redirección HTTPS
    "Port": 443 // Puerto HTTPS
  }
}