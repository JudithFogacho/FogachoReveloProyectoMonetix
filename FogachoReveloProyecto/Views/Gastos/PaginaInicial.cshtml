@model IEnumerable<FogachoReveloProyecto.Models.Gasto>

@{
    ViewData["Title"] = "Página Inicial";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Koulen&family=Kosugi+Maru&family=Lilita+One&display=swap" rel="stylesheet">

<div class="bienvenida">
    <div class="imagen-bienvenida">
        <img src="~/img/LogoImg.png" alt="LogoImg" asp-append-version="true" class="logopi" />
        <div>
            <p>Bienvenido, @ViewBag.NombreUsuario</p>
        </div>
        <div class="cerrar-sesion">
            <p><a asp-controller="Usuarios" asp-action="Login">Cerrar Sesión</a></p>
        </div>
    </div>
    <div>
        <h1 class="koulen-regular">Monetix</h1>
    </div>
</div>

<h2 class="TituloIS">PÁGINA INICIAL</h2>

<form asp-action="PaginaInicial" method="get">
    <div class="Buscar">
        <label for="categoria">Buscar por Categoría:</label>
        <select id="categoria" name="categoria" class="form-control">
            <option value="">-- Todas --</option>
            @foreach (var categoria in Enum.GetValues(typeof(FogachoReveloProyecto.Models.Categoria)))
            {
                <option value="@categoria">@categoria</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-buscar">-----Buscar-----</button>
</form>

<p>
    <a asp-action="CrearGasto" class="btn btn-success">Ingresar Gasto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FechaRegristo)</th>
            <th>@Html.DisplayNameFor(model => model.First().FechaFinal)</th>
            <th>@Html.DisplayNameFor(model => model.First().Categorias)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.First().Valor)</th>
            <th>@Html.DisplayNameFor(model => model.First().ValorPagado)</th>
            <th>@Html.DisplayNameFor(model => model.First().Estados)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.FechaRegristo)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.FechaFinal)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.Categorias)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.Valor)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.ValorPagado)</td>
                <td class="tabla-body">@Html.DisplayFor(modelItem => item.Estados)</td>
                <td class="tabla-body">
                    <a asp-action="Edit" asp-route-id="@item.IdGasto" asp-route-userId="@ViewBag.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGasto" asp-route-userId="@ViewBag.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGasto" asp-route-userId="@ViewBag.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="totales1">
    <div colspan="4" class="text-right">
        <strong>Subtotal Gastos:</strong>
        <strong class="precio1">@ViewBag.SubtotalGastos.ToString("C")</strong>
    </div>
</div>
<div class="totales2">
    <div colspan="4" class="text-right">
        <strong>Subtotal Valor Pagado:</strong>
        <strong class="precio2">@ViewBag.SubtotalValorPagado.ToString("C")</strong>
    </div>
</div>
<div class="totales3">
    <div colspan="4" class="text-right">
        <strong>Total:</strong>
        <strong class="precio3">@ViewBag.Total.ToString("C")</strong>
    </div>
</div>

@section Scripts {
    <script>
        // Obtener el userId desde localStorage
        const userId = localStorage.getItem("userId");
        if (!userId) {
            window.location.href = "/Usuarios/Login";
        }
    </script>
}